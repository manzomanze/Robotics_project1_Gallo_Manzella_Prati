<launch>

    <!-- The parameter server ues the name convention of ros, so, by defining so the name of the parameters -->
    <!-- we are able to retrieve the position and orientation just by execute the rosparam /initial_pose commands -->
    
    <!-- <param name="initial_pose/position/xPos" value = "0" />
    <param name="initial_pose/position/yPos" value = "0" />
    <param name="initial_pose/position/zPos" value = "0" />

    <param name="initial_pose/orientation/x" value = "0" />
    <param name="initial_pose/orientation/y" value = "0"/>
    <param name="initial_pose/orientation/z" value = "0"/>
    <param name="initial_pose/orientation/w" value = "0"/> -->

    <node pkg="project1" type="odometry" name="speed_calculator" output="screen" />
